@model List<TicketSystem.Models.Ticket>
@{
    ViewData["Title"] = "Ticket Results";
    Layout = "_OfficerLayout";
    
}
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>

    <link rel="stylesheet" href="~/css/ticketResults.css" />
    
    </head>
    <body>
    <div class="container-fluid mt-3">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>
                <i class="fas fa-ticket-alt me-2"></i>
                Tickets for this Plate number : <span class="text-primary">@ViewBag.SearchQuery</span>
            </h2>
            <a asp-action="ScanPlate" class="btn btn-sm btn-outline-secondary">
                <i class="fas fa-search me-1"></i> New Search
            </a>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i> No tickets found
            </div>
        }
        else
        {
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @foreach (var ticket in Model)
                        {
                            <a asp-action="DetailedTicket" asp-route-id="@ticket.Ticket_Id"
                               class="list-group-item list-group-item-action rounded p-3 border-0 shadow-sm ticket-item"
                               data-status="@ticket.Status?.ToLower()">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <div class="d-flex align-items-center mb-1">
                                            <h6 class="mb-0 fw-bold">@ticket.Violations</h6>
                                            <span class="badge @GetStatusBadgeClass(ticket.Status) me-2">

                                            </span>
                                        </div>
                                        <p class="small text-muted mb-1">
                                            <i class="fas fa-car ms-1"></i> @ticket.Plate_Number
                                        </p>
                                        <p class="small text-muted mb-0">
                                            <i class="fas fa-map-marker-alt ms-1"></i> @ticket.Violation_Place
                                        </p>
                                    </div>
                                    <div class="text-start">
                                        <small class="d-block text-muted">@ticket.Ticket_Time.ToString("dd/MM/yyyy")</small>
                                        <small class="d-block text-danger fw-bold">@ticket.FineAmount.ToString("C")</small>
                                        <small class="d-block text-danger">استحقاق @ticket.Due_Date.ToString("dd/MM/yyyy")</small>
                                    </div>
                                </div>
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
    </body>
</html>





@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Paid" => "bg-success",
            "Pending" => "bg-warning",
            "Rejected" => "bg-danger",
            "UnderProcess" => "bg-info text-white",
            _ => "bg-secondary"
        };
    }
}