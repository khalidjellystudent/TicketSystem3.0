
@{
    ViewData["Title"] = "الرئيسية | نظام المخالفات المرورية";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <style>
        .hero-gradient {
            background: linear-gradient(135deg, #0ea5e9 0%, #0c4a6e 100%);
        }
        .feature-card {
            transition: all 0.3s ease;
        }
        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.1);
        }
        .stat-card {
            background: white;
            border-radius: 1rem;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            transition: all 0.3s ease;
        }
        .stat-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }
        .manual-container {
            max-width: 900px;
            margin: 0 auto;
        }

        .phone-frame {
            box-shadow: 0 8px 32px rgba(30,64,175,0.10), 0 1.5px 6px rgba(30,64,175,0.08);
        }

        .phone-screen {
            box-shadow: 0 2px 8px rgba(30,64,175,0.07);
        }

        .caption {
            font-size: 0.95rem;
            letter-spacing: 0.01em;
        }

        .step-text {
            box-shadow: 0 4px 24px rgba(30,64,175,0.07);
        }

        .nav-buttons button:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        @@media (max-width: 768px) {
            .manual-container {
                flex-direction: column !important;
                gap: 2rem !important;
            }

            .hero-gradient {
                padding: 4rem 0 !important;
            }

            section {
                padding: 3rem 0 !important;
            }

            .stat-card, .feature-card {
                margin-bottom: 1rem;
            }
        }

        @@keyframes blob {
            0% {
                transform: translate(0px, 0px) scale(1);
            }

            33% {
                transform: translate(30px, -50px) scale(1.1);
            }

            66% {
                transform: translate(-20px, 20px) scale(0.9);
            }

            100% {
                transform: translate(0px, 0px) scale(1);
            }
        }

        .animate-blob {
            animation: blob 7s infinite;
        }

        .animation-delay-2000 {
            animation-delay: 2s;
        }

        .animation-delay-4000 {
            animation-delay: 4s;
        }

        /* Smooth scroll behavior */
        html {
            scroll-behavior: smooth;
        }

        /* Fade-in animations */
        [data-animate] {
            opacity: 0;
            transform: translateY(30px);
            transition: opacity 0.6s ease-out, transform 0.6s ease-out;
        }

        [data-animate].animated {
            opacity: 1;
            transform: translateY(0);
        }

        /* Mobile optimizations */
        @@media (max-width: 640px) {
            .hero-gradient h1 {
                font-size: 2rem !important;
                line-height: 1.2 !important;
            }

            .hero-gradient p {
                font-size: 1rem !important;
            }

            .phone-frame {
                width: 240px !important;
                height: 400px !important;
            }

            .step-text {
                font-size: 1rem !important;
                padding: 1.5rem !important;
            }
        }

        /* Coming-soon badges and overlays for Mobile App Banner */
        .coming-soon-ribbon {
            position: absolute;
            top: 1rem;
            left: 1rem;
            z-index: 50;
            transform: rotate(-12deg);
            background: linear-gradient(90deg,#f97316,#fb7185);
            color: white;
            padding: 0.5rem 1rem;
            font-weight: 700;
            border-radius: 0.5rem;
            box-shadow: 0 6px 18px rgba(0,0,0,0.18);
            font-size: 0.95rem;
            pointer-events: none;
        }

        .app-coming-badge {
            position: absolute;
            top: 6px;
            right: 8px;
            background: rgba(0,0,0,0.6);
            color: #fff;
            font-size: 0.7rem;
            padding: 2px 6px;
            border-radius: 999px;
            pointer-events: none;
        }

        .phone-coming-overlay {
            background: rgba(0,0,0,0.45);
            color: #fff;
            border-radius: 1rem;
            backdrop-filter: blur(2px);
        }

        .phone-coming-text {
            font-size: 1.6rem;
            font-weight: 800;
            padding: 0.6rem 1.2rem;
            border-radius: 999px;
            background: linear-gradient(90deg,#e11d48,#ef4444);
            box-shadow: 0 8px 24px rgba(0,0,0,0.25);
        }
    </style>
}
