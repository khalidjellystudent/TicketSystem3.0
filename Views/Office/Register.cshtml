@using TicketSystem.Models
@model User
@{
    Layout = "_OfficeLayout";
}
<head>

</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h3 class="text-center">Create New Account</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Register" method="post">
                            <!-- Personal Info -->
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label asp-for="Name" class="form-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" type="email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    @if (ViewData.ModelState["Email"]?.Errors.Count > 0)
                                    {
                                        <span class="text-danger">@ViewData.ModelState["Email"].Errors[0].ErrorMessage</span>
                                    }
                                </div>
                            </div>

                            <!-- Password -->
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label"></label>
                                <input asp-for="Password" type="password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <!-- Demographics -->
                            <div class="row mb-3">
                                <div class="col-md-3">
                                    <label asp-for="Birth_Date" class="form-label"></label>
                                    <input asp-for="Birth_Date" type="date" class="form-control" />
                                </div>
                                <div class="col-md-3">
                                    <label asp-for="Sex" class="form-label"></label>
                                    <select asp-for="Sex" class="form-select">
                                        <option value="">Select</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label asp-for="Role" class="form-label"></label>
                                    <select asp-for="Role" class="form-select">
                                        <option value="">Select</option>
                                        <option value="User">User</option>
                                        <option value="Officer">Officer</option>
                                        <option value="Office">Office</option>
                                        <option value="Admin">Admin</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label asp-for="Blood_Type" class="form-label"></label>
                                    <select asp-for="Blood_Type" class="form-select">
                                        <option value="">Select</option>
                                        <option value="A+">A+</option>
                                        <option value="A-">A-</option>
                                        <option value="B+">B+</option>
                                        <option value="B-">B-</option>
                                        <option value="AB+">AB+</option>
                                        <option value="AB-">AB-</option>
                                        <option value="O+">O+</option>
                                        <option value="O-">O-</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label asp-for="License_Status" class="form-label"></label>
                                    <select asp-for="License_Status" class="form-select">
                                        <option value="Valid">Valid</option>
                                        <option value="Expired">Expired</option>
                                        <option value="Suspended">Suspended</option>
                                    </select>
                                </div>
                            </div>

                            <!-- Address & Degree -->
                            <div class="row mb-3">
                                <div class="col-md-8">
                                    <label asp-for="Address" class="form-label"></label>
                                    <input asp-for="Address" class="form-control" />
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="Digree" class="form-label"></label>
                                    <input asp-for="Digree" class="form-control" />
                                </div>
                            </div>



                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Register</button>
                            </div>
                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success">
                                    @TempData["SuccessMessage"]
                                </div>
                            }

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>


